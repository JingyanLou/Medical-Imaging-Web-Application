@model FIT5032_MyProject.Models.SendReportViewModels

@{
    ViewBag.Title = "Send Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Send Report</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ReportId) // Hidden field to keep track of which report you're sending

    <div class="form-group">
        @Html.LabelFor(model => model.ToEmail, new { @class = "control-label" })
        @Html.EditorFor(model => model.ToEmail, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ToEmail, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
}
