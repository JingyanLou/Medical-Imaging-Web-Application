@{
    var justLoggedIn = TempData["JustLoggedIn"] as bool?;
    var fullName = TempData["FullName"] as string;
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>MegaScan</h1>
    <p class="lead">
        Welcome to MegaScan!
        Melbourne's premier destination for MRI imaging services. Combining advanced technology with unparalleled expertise, we deliver clear, precise results for your health and peace of mind. Entrust your diagnostic journey with us
    </p>
    <p><a href="@Url.Action("Index", "Branches")" class="btn btn-primary btn-lg">Book an appointment &raquo;</a></p>

</div>

<div class="row">
    <div class="col-md-4">
        <h2>View our branches</h2>
        <p>
            Discover MegaScan's premier MRI imaging services across Melbourne. Locate a branch nearby and experience our commitment to excellence.
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Index", "Branches")">View Branches &raquo;</a></p>
    </div>

    <div class="col-md-4">
        <h2>Become a member</h2>
        <p>
            Become a memeber of MegaScan family and explore different fantastic services we provide!
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Register", "Account")">Register Now &raquo;</a></p>
    </div>

</div>

@section scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/notify.min.js" defer></script>

    <script>
        $(document).ready(function () {
            // For testing

            $.notify.defaults({
                position: 'top-left'
            });
            //$.notify("Testing on notify JS - About Page", "success");

            // If the user just logged in, welcome them
            @if (justLoggedIn.HasValue && justLoggedIn.Value)
            {
                   
                <text>
                $.notify("Welcome back, " + '@fullName', "success");
                </text>
            }
        });
    </script>
}
